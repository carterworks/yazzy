{
  "name": "yazzy",
  "version": "0.2.2",
  "scripts": {
    "format": "prettier --write .",
    "dev": "NODE_ENV=development astro dev",
    "build": "bun run css --minify && NODE_ENV=production bun build src/server.tsx --compile --outfile dist/yazzy && mkdir -p dist/src/db/migrations/meta && cp -r src/db/migrations/ dist/src/db/migrations/"
  },
  "type": "module",
  "dependencies": {
    "@astrojs/node": "^9.4.2",
    "@tailwindcss/vite": "^4.1.12",
    "astro": "^5.13.2",
    "defuddle": "^0.6.6",
    "drizzle-orm": "^0.44.4",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
